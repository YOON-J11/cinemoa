<div class="info-form-section">
    <h2 class="section-title">개인정보 수정</h2>

    {{#success}}
        <p class="success-message">{{.}}</p>
    {{/success}}
    <form method="post" action="/mypage/information/edit" class="info-form">
        <label for="birthDate">생년월일</label>
        <input type="date" id="birthDate" name="birthDate" value="{{birthDate}}" />

        <label for="phone">휴대전화</label>
        <input type="text" id="phone" name="phone" value="{{phone}}" placeholder="010-1234-5678" />

        <label for="email">이메일</label>
        <input type="email" id="email" name="email" value="{{email}}" placeholder="example@example.com" />

        <label for="address">주소</label>
        <input type="text" id="address" name="address" value="{{address}}" placeholder="주소를 입력하세요" />

        <button type="submit" class="primary-button">수정 완료</button>
    </form>


</div>
